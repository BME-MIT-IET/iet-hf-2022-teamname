<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.FunctionList" prefHeight="400.0" prefWidth="600.0">
    <center>
        <ListView fx:id="functionList"/>

    </center>
    <bottom>
        <GridPane alignment="CENTER" >
            <columnConstraints>
            <ColumnConstraints percentWidth="50" />
            <ColumnConstraints percentWidth="50" />
        </columnConstraints>
            <Button fx:id="addNew" text="Add Function"  onAction="#addNewFunc" GridPane.columnIndex="0" prefWidth="Infinity"/>
            <Button fx:id="importFunc" text="Import Function"  onAction="#importFunctions" GridPane.columnIndex="1" prefWidth="Infinity"/>
        </GridPane>

    </bottom>
</BorderPane>
